generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}
model Scenario {
  id        String   @id @default(cuid())
  name      String
  kind      String   // "DCF" | "LBO"
  currency  String   @default("USD")
  inputs    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([kind])
  @@index([createdAt])
}